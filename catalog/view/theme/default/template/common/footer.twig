<footer class="footer">
  {% if not logged %}
  <div id="login-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <div class="loading"><div class="spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div></div>
    </div>
  </div>
  {% endif %}
  <div class="container">
    <div class="columns is-mobile is-multiline">
      {% if informations %}
      <div class="column is-3-widescreen is-3-desktop is-6-tablet is-12-mobile">
        <h5 class="title is-5">{{ text_information }}</h5>
        <ul class="list-unstyled">
          {% for information in informations %}
          <li><a href="{{ information.href }}">{{ information.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}
      <div class="column is-3-widescreen is-3-desktop is-6-tablet is-12-mobile">
        <h5 class="title is-5">{{ text_service }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ contact }}">{{ text_contact }}</a></li>
          <li><a href="{{ return }}">{{ text_return }}</a></li>
          <li><a href="{{ sitemap }}">{{ text_sitemap }}</a></li>
        </ul>
      </div>
      <div class="column is-3-widescreen is-3-desktop is-6-tablet is-12-mobile">
        <h5 class="title is-5">{{ text_extra }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>
          <li><a href="{{ voucher }}">{{ text_voucher }}</a></li>
          <li><a href="{{ affiliate }}">{{ text_affiliate }}</a></li>
          <li><a href="{{ special }}">{{ text_special }}</a></li>
        </ul>
      </div>
      <div class="column is-3-widescreen is-3-desktop is-6-tablet is-12-mobile">
        <h5 class="title is-5">{{ text_account }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ account }}">{{ text_account }}</a></li>
          <li><a href="{{ order }}">{{ text_order }}</a></li>
          <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
          <li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="columns is-multiline">
      <div class="column is-6-desktop is-6-tablet is-12-mobile">
        {{ powered }}
      </div>
      <div class="column is-6-desktop is-6-tablet is-12-mobile has-text-right">
        {{ based }}
      </div>
      <div class="column is-12">
        {{ copyright }}
      </div>
    </div>
  </div>
  <div class="mobile-contacts">
    <button class="mobile-contacts-trigger has-background-success has-text-white is-clickable">
      <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" fill="currentColor" viewBox="0 0 512 512">
        <path
          d="M280 0C408.1 0 512 103.9 512 232c0 13.3-10.7 24-24 24s-24-10.7-24-24c0-101.6-82.4-184-184-184c-13.3 0-24-10.7-24-24s10.7-24 24-24zm8 192a32 32 0 1 1 0 64 32 32 0 1 1 0-64zm-32-72c0-13.3 10.7-24 24-24c75.1 0 136 60.9 136 136c0 13.3-10.7 24-24 24s-24-10.7-24-24c0-48.6-39.4-88-88-88c-13.3 0-24-10.7-24-24zM117.5 1.4c19.4-5.3 39.7 4.6 47.4 23.2l40 96c6.8 16.3 2.1 35.2-11.6 46.3L144 207.3c33.3 70.4 90.3 127.4 160.7 160.7L345 318.7c11.2-13.7 30-18.4 46.3-11.6l96 40c18.6 7.7 28.5 28 23.2 47.4l-24 88C481.8 499.9 466 512 448 512C200.6 512 0 311.4 0 64C0 46 12.1 30.2 29.5 25.4l88-24z" />
      </svg>
    </button>
    <div class="mobile-contacts-list p-5 has-background-white">
      <a href="tel:{{ telephone }}" class="footer-phone is-flex is-align-items-center">
        <span class="icon is-medium has-text-success mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 512 512">
            <path
              d="M497.4 361.8l-112-48a24 24 0 0 0 -28 6.9l-49.6 60.6A370.7 370.7 0 0 1 130.6 204.1l60.6-49.6a23.9 23.9 0 0 0 6.9-28l-48-112A24.2 24.2 0 0 0 122.6 .6l-104 24A24 24 0 0 0 0 48c0 256.5 207.9 464 464 464a24 24 0 0 0 23.4-18.6l24-104a24.3 24.3 0 0 0 -14-27.6z" />
          </svg>
        </span>
        <span class="has-text-black has-text-weight-bold is-size-5">{{ telephone }}</span>
      </a>
      {% if fax %}
      <a href="mailto:{{ email }}" class="is-flex is-align-items-center">
        <span class="icon is-medium has-text-link mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" fill="currentColor"
            viewBox="0 0 512 512">
            <path
              d="M497.4 361.8l-112-48a24 24 0 0 0 -28 6.9l-49.6 60.6A370.7 370.7 0 0 1 130.6 204.1l60.6-49.6a23.9 23.9 0 0 0 6.9-28l-48-112A24.2 24.2 0 0 0 122.6 .6l-104 24A24 24 0 0 0 0 48c0 256.5 207.9 464 464 464a24 24 0 0 0 23.4-18.6l24-104a24.3 24.3 0 0 0 -14-27.6z" />
          </svg>
        </span>
        <span class="has-text-black has-text-weight-bold is-size-5">{{ fax }}</span>
      </a>
      {% endif %}
      <a href="mailto:{{ email }}" class="is-flex is-align-items-center mt-3">
        <span class="icon is-medium has-text-link mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
            <path
              d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
          </svg>
        </span>
        <span class="has-text-black has-text-weight-bold is-size-5">{{ email }}</span>
      </a>
      {% if social_media %}
      <div class="mt-5 is-flex is-justify-content-center is-align-items-center">
        {% for item in social_media %}
        {% if item.header %}
        <a href="{{ item.url }}" target="_blank" class="{{ item.name }}">
          <span class="icon is-medium">{{ item.icon|html_entity_decode }}</span>
        </a>
        {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
  <div class="scroll-top-trigger is-flex is-align-items-center is-justify-content-center has-text-white is-clickable">
    <span class="icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="currentColor" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708l6-6z"/>
      </svg>
    </span>
  </div>
  {% if stores %}
  {{ stores }}
  {% endif %}
  {% if privacy %}
  {{ privacy }}
  {% endif %}
</footer>
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
