<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ title }}</title>
  {% if robots %}
  <meta name="robots" content="{{ robots }}" />
  {% endif %}
  <base href="{{ base }}" />
  {% if description %}
  <meta name="description" content="{{ description }}" />
  {% endif %}
  {% if keywords %}
  <meta name="keywords" content="{{ keywords }}" />
  {% endif %}
  <meta property="og:title" content="{{ title }}" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="{{ og_url }}" />
  {% if og_image %}
  <meta property="og:image" content="{{ og_image }}" />
  {% else %}
  <meta property="og:image" content="{{ logo }}" />
  {% endif %}
  <meta property="og:site_name" content="{{ name }}" />
  {% for link in links %}
  <link href="{{ link.href }}" rel="{{ link.rel }}" />
  {% endfor %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
  {% for style in styles %}
  <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
  {% endfor %}
  {% if comporess_js %}
  <script src="catalog/view/theme/default/js/jquery.min.js"></script>
  {% endif %}
  {% for script in scripts %}
  <script src="{{ script }}"></script>
  {% endfor %}
  {% for analytic in analytics %}
  {{ analytic }}
  {% endfor %}
</head>
<body>
  <header>
    <div class="container">
      <div class="columns is-mobile is-align-items-center">
        <div class="column">
          <div class="columns is-mobile is-align-items-center is-justify-content-space-between">
            <div class="column is-narrow py-5 is-flex is-align-items-center">
              <div id="logo">
                {% if logo %}
                {% if home == og_url %}
                <span>
                  <img src="{{ logo }}" width="{{ logo_width }}"  height="{{ logo_height }}" alt="{{ title }}">
                </span>
                {% else %}
                <a href="{{ home }}">
                  <img src="{{ logo }}" width="{{ logo_width }}"  height="{{ logo_height }}" alt="{{ title }}">
                </a>
                {% endif %}
                {% else %}
                <a class="title is-1 mb-0" href="{{ home }}">{{ name }}</a>
                {% endif %}
              </div>
              {% if show_stores %}
              <div id="stores" class="is-clickable ml-5">
                <span class="icon-text">
                  <span class="icon has-text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" fill="currentColor" viewBox="0 0 16 16">
                      <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
                      <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    </svg>
                  </span>
                  <span class="has-text-gray has-text-weight-bold is-hidden-mobile">{{ city }}</span>
                </span>
              </div>
              {% endif %}
            </div>
            <div class="column is-narrow">
              <div class="header-contacts is-hidden-mobile">
                <a class="icon-text email" href="mailto:{{ email }}">
                  <span class="icon has-text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="currentColor" viewBox="0 0 16 16">
                      <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                    </svg>
                  </span>
                  <span class="has-text-weight-bold ">{{ email }}</span>
                </a>
                <a class="icon-text phone" rel="nofollow" href="tel:{{ tel_link }}">
                  <span class="icon has-text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="currentColor" viewBox="0 0 16 16">
                      <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
                      <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                    </svg>
                  </span>
                  <span class="has-text-weight-bold ">{{ telephone }}</span>
                </a>
                {% if social_media %}
                {% for item in social_media %}
                {% if item.header %}
                <a href="{{ item.url }}" rel="nofollow" target="_blank" class="icon-text {{ item.name }} ml-4">
                  <span class="icon">{{ item.icon|html_entity_decode }}</span>
                </a>
                {% endif %}
                {% endfor %}
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% if currency or language %}
        <div class="column is-narrow">
          <div class="is-flex is-align-items-center is-justify-content-flex-end localisation">
            {{ currency }}
            {{ language }}
          </div>
        </div>
        {% endif %}
      </div>
    </div>
    {{ search }}    
  </header>
  {{ menu }}
